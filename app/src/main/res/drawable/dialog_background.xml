<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경 색 설정 (원하는 색상으로 변경 가능) -->
    <solid android:color="@color/white"/>

    <!-- 테두리 설정 -->
    <stroke
        android:width="2dp"
        android:color="@color/quantum_grey"/> <!-- 테두리 색상: 빨간색 -->

    <!-- 모서리 둥글게 설정 -->
    <corners android:radius="6dp"/>

    <!-- 패딩 설정 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>
