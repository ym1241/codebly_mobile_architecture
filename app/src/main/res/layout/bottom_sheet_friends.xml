<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bottom_sheet_friends">
    <!-- 위치공유할 친구선택 -->
    <ImageView
        android:id="@+id/recyclerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toTopOf="@id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/titlerecycler" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerTitle" />
    <!-- 공유 버튼 -->
    <ImageView
        android:id="@+id/recyclerbasebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:srcCompat="@drawable/recyclerbasebtn" />

    <ImageView
        android:id="@+id/recyclerbtntext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerbasebtn"
        app:layout_constraintEnd_toEndOf="@+id/recyclerbasebtn"
        app:layout_constraintStart_toStartOf="@+id/recyclerbasebtn"
        app:layout_constraintTop_toTopOf="@+id/recyclerbasebtn"
        app:srcCompat="@drawable/recyclerokbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>
